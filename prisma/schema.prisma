generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("HOST")
  directUrl = env("POSTGRES_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  role     Role   @default(USER)

  company  Company?
}

model Company {
  id           Int     @id @default(autoincrement())
  name         String 
  user         User    @relation(fields: [companyId], references: [id])
  companyId    Int     @unique
  location     String
  description  String
}

model Job {
  id          Int          @id @default(autoincrement())
  owner       String
  description String
  skill       String[]
  type        positionType @default(internship)
  openings    Int
  salary      String
}

enum Role {
  USER
  ADMIN
  COMPANY
}

enum positionType {
  internship
  permanent
  both
}
