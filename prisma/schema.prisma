generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}


// Models for the User

model User {
  id              Int    @id @default(autoincrement())
  email           String @unique
  password        String
  role            Role   

  // Relation to one of the profiles
  // Depends on "role" i.e: User with "Student" role will have StudentProfile
  studentProfile  StudentProfile?
  companyProfile  CompanyProfile?
}

model CompanyProfile {
  id           Int     @id @default(autoincrement())
  name         String 
  company      User    @relation(fields: [companyId], references: [id])
  companyId    Int     @unique
  overview     String 
  location     String
  jobs         Job[]
  mainSite     String?
  contact      String
  companyPic   String
}

model StudentProfile {
  id           Int     @id @default(autoincrement())
  student      User    @relation(fields: [studentId], references: [id])
  studentId    Int     @unique
  firstName    String
  lastName     String
  location     String
  aboutMe      String
  major        String
  portfolio    String
  interests    String
  profilePic   String
}

model Job {
  id            Int             @id @default(autoincrement())
  jobId         Int          
  jobFrom       CompanyProfile  @relation(fields: [jobId], references: [id])
  company       String
  description   String
  skills        String
  type          PositionType    @default(internship)
  openings      Int
  salary        String
}

enum Role {
  STUDENT
  COMPANY
  ADMIN
}

enum PositionType {
  internship
  permanent
  both
}
